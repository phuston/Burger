<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/javascripts/ingredients.js"></script>

<h1>Add/Update Ingredients</h1>

<a href="/orders">
  <button>Orders</button>
</a>

<a href="/kitchen">
  <button>Kitchen</button>
</a>

<form id="new" action="/ingredients/add" method="POST">
  Name:
  <input type="text" name="name">
  Quantity:
  <input type="text" name="quantity">
  Cost:
  <input type="text" name="cost"> 
  <input type="submit" value="Submit">
</form> <br>

<table id="ingredients">
    <tr>
        <th>Name</th>
        <th>Cost</th>
        <th>Quantity</th>
        <th>Add</th>
        <th>Remove</th>
        <th>Edit</th>
    </tr>
    {{#each Ingredients}}
        <tr>
            <td class="name">{{name}}</td>
            <td class="cost">{{cost}}</td>
            <td class="quan">{{quantity}}</td>
            <td><input class="add" type="button" value="Add 5"></td>
            <td><input class="remove" type="button" value="X"> </td>
            <td><input class="edit" type="button" value="Edit"> </td>
        </tr>
    {{/each}}
</table>

<div id="editContainer">
  <h2 id="editTitle"></h2>
  New Price:
  <input id="editPrice" type="text"> 
  New Quantity:
  <input id="editQuantity" type="text">
  <input id="editSubmit" type="button" value="Submit">
</div>
