<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
<script src="/javascripts/orders.js"></script>

<h1>Order here!</h1>

<table class="ingredients-list">
    <tr>
        <th>Quantity</th>   
        <th>Name</th>
        <th>Cost</th>
        <th>Subtract</th>
        <th>Add</th>
    </tr>
    {{#each Ingredients}}
        <tr>
            <td class="quan">0</td>
            <td class="name">{{name}}</td>
            <td class="cost">{{cost}}</td>
            <td><input class="sub" type="button" value="-"></td>
            <td><input class="add" type="button" value="+"></td>
        </tr>
    {{/each}}
</table>

<h3>Total Price</h3>
<h4 id="totalprice">$0.00</h4>

<input id="order" type="button" value="Order!">